<Window x:Class="GridPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridPanel"
        mc:Ignorable="d"
        Title="Layout:GridPanel" Height="300" Width="300">
    <Grid ShowGridLines="True" HorizontalAlignment="Center"
          VerticalAlignment="Center" Background="AliceBlue"
          Height="300" Width="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Image Height="150" Grid.Column="0" Source="/cute-so.gif" />
        <Image Height="150" Grid.Column="1" Source="/cute-so.gif" />
        <Image Height="150" Grid.Column="2" Source="/cute-so.gif" />
        

    </Grid>
</Window>
